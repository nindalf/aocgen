use criterion::\{black_box, criterion_group, Criterion};

static DAY_{n}_INPUT: &str = include_str!("../src/day{n}/input.txt");

fn bench_part_1(c: &mut Criterion) \{
    c.bench_function("Day {n} Part 1", |b| \{
        b.iter(|| advent_2022::day{n}::part_1(black_box(DAY_{n}_INPUT)))
    });
}

fn bench_part_2(c: &mut Criterion) \{
    c.bench_function("Day {n} Part 2", |b| \{
        b.iter(|| advent_2022::day{n}::part_2(black_box(DAY_{n}_INPUT)))
    });
}

criterion_group!(
    benches, 
    bench_part_1,
    bench_part_2,
);
